{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++: Depurar programa",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/push_swap", // Ruta al ejecutable
            "args": ["-1", "-32", "-3", "4", "5", "-6"], // Argumentos que deseas pasar al programa
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "C/C++: gcc build active file",
            "setupCommands": [
                {
                    "description": "Habilitar impresi√≥n de valores largos",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "postDebugTask": "Limpiar"
        }
    ]
}
